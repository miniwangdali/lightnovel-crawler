{
  "name": "lightnovel-crawler",
  "version": "0.1.0",
  "main": "build/server/main.js",
  "scripts": {
    "start": "electron ./build/server/main.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "webpack --config ./webpack/webpack.dev.config.js",
    "dev": "nodemon --watch ./src/server",
    "dev:all": "cross-env NODE_ENV=development FORCE_COLOR=1 npm-run-all -l -p dev:client dev:server",
    "dev:client": "npm run build:client",
    "dev:server": "npm run build:server && electron ./build/server/main.js",
    "pack": "electron-builder"
  },
  "author": "Xiaoyan Wang <miniwangdali@gmail.com> (https://github.com/miniwangdali)",
  "description": "The app can download lightnovels in the forum (https://www.lightnovel.cn). It is for personal use.",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "core-js": "^3.0.1",
    "epub-gen": "^0.1.0",
    "lodash": "^4.17.15",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@types/classnames": "^2.2.7",
    "@types/lodash": "^4.14.123",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.3",
    "@types/react-redux": "^7.1.1",
    "@types/react-router-dom": "^4.3.1",
    "autoprefixer": "^9.5.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "electron": "^18.3.7",
    "electron-builder": "^21.2.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "resolve-url-loader": "^3.1.0",
    "sass": "^1.18.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "typescript": "^3.5.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "nodemonConfig": {
    "ext": "ts, tsx, js, jsx, scss, css, html, json",
    "ignore": [
      "test/*",
      "docs/*",
      "dist/*",
      "build",
      "webpack",
      "node_modules/*"
    ],
    "delay": "1000",
    "exec": "npm run dev:all"
  },
  "build": {
    "appId": "io.github.miniwangdali.app.lightnovel-crawler",
    "productName": "Lightnovel Crawler",
    "copyright": "Copyright Â© 2019 Xiaoyan Wang",
    "files": [
      "**/*",
      "./build/icon.*"
    ],
    "directories": {
      "buildResources": "./src",
      "output": "./packages"
    },
    "win": {
      "target": "portable",
      "icon": "./build/icon.png",
      "asar": true
    }
  }
}
